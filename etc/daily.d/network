#	$NetBSD$

echo ""
echo "network:"
if checkyesno full_netstat; then
	netstat -inv
else
	netstat -inv | awk 'BEGIN {
		ifs[""] = 0;
	}
	/^[^\*]* / {
		if (NR == 1) {
			printf("%-8s %12s %6s %12s %6s %6s\n",
			  $1, $(NF-4), $(NF-3), $(NF-2), $(NF-1), $NF);
			next;
		}
		if (!($1 in ifs)) {
			printf("%-8s %12s %6s %12s %6s %6s\n",
			  $1, $(NF-4), $(NF-3), $(NF-2), $(NF-1), $NF);
			ifs[$1] = 1;
		}
	}'
fi
echo ""
t=/var/rwho/*
if [ "$t" != '/var/rwho/*' ]; then
	ruptime
fi
